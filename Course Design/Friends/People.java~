package Friends;

import Date; 

public class People {

	/**
	 * ClassName:People
	 **/

	public static PEOPLE_NUMBER = 0; 		// 人数编号
	public static COL_CLM = 1001;			// 大学同学
	public static HI_CLM = COL_FRI + 1;		// 高中同学
	public static FAM = HI_FRI + 1;			// 家人
	public static FRI = FAM + 1;			// 朋友
	public static TEA = FRI + 1;			// 老师
	public static RES = TEA + 1;			// 订餐

	private int ID_number; 					// 编号
	private String name;					// 姓名
	private Date birthday;					// 生日
	private String phone_num1;				// 手机号1
	private String phone_num2;				// 手机号2
	private String phone_num3;				// 手机号3
	private String location;				// 所在地
	private int group;						// 所处群组

	// 参数完全的构造函数
	public People(String name, 
		   		  Date birthday,
		   		  String phone_num1,
		   		  String phone_num2,
		   		  String phone_num3,
		   		  String location,
		   		  int group) {
		PEOPLE_NUMBER++;	// 人数编号加1
		
		this.ID_number = PEOPLE_NUMBER;
		this.birthday = birthday;
		this.phone_num1 = phone_num1;
		this.phone_num2 = phone_num2;
		this.phone_num3 = phone_num3;
		this.location = location;
		this.group = group;
	}
	
	// 只含2个手机号的构造函数
	public People(String name,
		   		  Date birthday,
		   		  String phone_num1,
		   		  String phone_num2,
		   		  String location,
		   		  int group) {
		this(name, birthday, phone_num1, 
			phone_num2, "NULL", location, group)
	}
	
	// 只含1个手机号的构造函数
	public People(String name,
		   		  Date birthday,
		   		  String phone_num1,
		   		  String location,
		   		  int group) {
		this(name, birthday, phone_num1, 
			"NULL", "NULL", location, group)
	}
	
	
}
